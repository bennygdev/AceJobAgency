@page "{code:int?}"
@model AceJobAgency.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mx-auto px-4 py-16">
    <div class="mx-auto max-w-md text-center">
        @if (Model.StatusCode.HasValue)
        {
            <div class="mb-6 text-8xl font-bold text-muted-foreground/20">@Model.StatusCode</div>
            
            @switch (Model.StatusCode.Value)
            {
                case 400:
                    <h1 class="text-2xl font-bold mb-3">Bad Request</h1>
                    <p class="text-muted-foreground mb-8">The request could not be understood. Please check your input and try again.</p>
                    break;
                case 401:
                    <h1 class="text-2xl font-bold mb-3">Unauthorized</h1>
                    <p class="text-muted-foreground mb-8">You need to be logged in to access this page.</p>
                    break;
                case 403:
                    <h1 class="text-2xl font-bold mb-3">Access Denied</h1>
                    <p class="text-muted-foreground mb-8">You don't have permission to access this resource.</p>
                    break;
                case 404:
                    <h1 class="text-2xl font-bold mb-3">Page Not Found</h1>
                    <p class="text-muted-foreground mb-8">The page you're looking for doesn't exist or has been moved.</p>
                    break;
                case 500:
                    <h1 class="text-2xl font-bold mb-3">Server Error</h1>
                    <p class="text-muted-foreground mb-8">Something went wrong on our end. We're working to fix it.</p>
                    break;
                default:
                    <h1 class="text-2xl font-bold mb-3">Something Went Wrong</h1>
                    <p class="text-muted-foreground mb-8">An unexpected error occurred. Please try again.</p>
                    break;
            }
        }
        else
        {
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-red-100 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-red-600"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
            </div>
            <h1 class="text-2xl font-bold mb-3">An Error Occurred</h1>
            <p class="text-muted-foreground mb-8">Something went wrong while processing your request. Please try again.</p>
        }

        @if (!string.IsNullOrEmpty(Model.RequestId))
        {
            <p class="text-xs text-muted-foreground mb-8 font-mono">Request ID: @Model.RequestId</p>
        }

        <div class="flex items-center justify-center gap-4 flex-wrap">
            <a asp-page="/Index" class="btn flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8"/><path d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/></svg>
                Go Home
            </a>
            <button onclick="history.back()" class="btn-outline flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
                Go Back
            </button>
        </div>
    </div>
</div>
