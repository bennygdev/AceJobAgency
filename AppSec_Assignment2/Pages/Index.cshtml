@page
@model IndexModel
@using System.Web
@{
    ViewData["Title"] = "Home";
}

@if (Model.IsAuthenticated && Model.CurrentMember != null)
{
    <div class="container mx-auto px-4 py-8">
        <!-- Welcome Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold tracking-tight">Welcome back, @Model.CurrentMember.FirstName!</h1>
            <p class="text-muted-foreground mt-1">Here's your profile information</p>
        </div>

        <div class="grid gap-6 lg:grid-cols-3">
            <!-- Profile Card -->
            <div class="card lg:col-span-2">
                <header>
                    <div class="flex items-center gap-4">
                        <div class="flex h-14 w-14 items-center justify-center rounded-full bg-primary text-primary-foreground text-lg font-bold">
                            @Model.CurrentMember.FirstName[0]@Model.CurrentMember.LastName[0]
                        </div>
                        <div>
                            <h2 class="text-lg font-semibold">@Model.CurrentMember.FirstName @Model.CurrentMember.LastName</h2>
                            <p class="text-sm text-muted-foreground">@Model.CurrentMember.Email</p>
                        </div>
                    </div>
                </header>
                <section>
                    <dl class="grid gap-4 sm:grid-cols-2">
                        <div>
                            <dt class="text-sm font-medium text-muted-foreground">Gender</dt>
                            <dd class="text-sm mt-1">@Model.CurrentMember.Gender</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-muted-foreground">Date of Birth</dt>
                            <dd class="text-sm mt-1">@Model.CurrentMember.DateOfBirth.ToString("MMMM dd, yyyy")</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-muted-foreground">NRIC (Decrypted)</dt>
                            <dd class="text-sm mt-1 flex items-center gap-2">
                                <span id="nricMasked">****@Model.DecryptedNRIC?.Substring(Math.Max(0, Model.DecryptedNRIC.Length - 4))</span>
                                <span id="nricFull" class="hidden">@Model.DecryptedNRIC</span>
                                <button type="button" onclick="toggleNRIC()" class="text-muted-foreground hover:text-foreground">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/></svg>
                                </button>
                            </dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-muted-foreground">Member Since</dt>
                            <dd class="text-sm mt-1">@Model.CurrentMember.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                        </div>
                    </dl>
                </section>
            </div>

            <!-- Security Card -->
            <div class="card">
                <header>
                    <h2 class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/></svg>
                        Security
                    </h2>
                </header>
                <section class="space-y-4">
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-muted-foreground">2FA Status</span>
                        @if (Model.CurrentMember.TwoFactorEnabled)
                        {
                            <span class="badge">Enabled</span>
                        }
                        else
                        {
                            <span class="badge-outline">Disabled</span>
                        }
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-muted-foreground">Last Login</span>
                        <span>@(Model.CurrentMember.LastLogin?.ToString("MMM dd, HH:mm") ?? "First login")</span>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-muted-foreground">Password Changed</span>
                        <span>@(Model.CurrentMember.LastPasswordChange?.ToString("MMM dd, yyyy") ?? "Never")</span>
                    </div>
                </section>
                <footer class="flex flex-col gap-2">
                    <a asp-page="/ChangePassword" class="btn-outline w-full text-center">Change Password</a>
                    @if (Model.CurrentMember.TwoFactorEnabled)
                    {
                        <a asp-page="/DisableAuthenticator" class="btn-outline w-full text-center">Disable 2FA</a>
                    }
                    else
                    {
                        <a asp-page="/EnableAuthenticator" class="btn-outline w-full text-center">Enable 2FA</a>
                    }
                </footer>
            </div>

            <!-- About Me Card -->
            <div class="card lg:col-span-2">
                <header>
                    <h2>Who Am I</h2>
                </header>
                <section>
                    <p class="text-sm text-muted-foreground whitespace-pre-wrap">@Model.CurrentMember.WhoAmI</p>
                </section>
            </div>

            <!-- Resume Card -->
            @if (!string.IsNullOrEmpty(Model.CurrentMember.ResumePath))
            {
                <div class="card">
                    <header>
                        <h2 class="flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/></svg>
                            Resume
                        </h2>
                    </header>
                    <section>
                        <p class="text-sm text-muted-foreground truncate">@Model.CurrentMember.ResumeFileName</p>
                    </section>
                    <footer>
                        <a href="@Model.CurrentMember.ResumePath" class="btn-outline w-full text-center flex items-center justify-center gap-2" download>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
                            Download
                        </a>
                    </footer>
                </div>
            }
        </div>
    </div>
}
else
{
    <!-- Landing Page -->
    <div class="container mx-auto px-4">
        <!-- Hero Section -->
        <section class="py-20 md:py-32">
            <div class="mx-auto max-w-3xl text-center">
                <span class="badge-outline mb-6">🎯 Your Career Partner</span>
                <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
                    Find Your Dream Job with <span class="text-primary">Ace Job Agency</span>
                </h1>
                <p class="mt-6 text-lg text-muted-foreground max-w-2xl mx-auto">
                    Connect with top employers, discover exciting opportunities, and take the next step in your professional journey.
                </p>
                <div class="mt-10 flex items-center justify-center gap-4 flex-wrap">
                    <a asp-page="/Register" class="btn">
                        Get Started
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                    </a>
                    <a asp-page="/Login" class="btn-outline">Sign In</a>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="py-16 border-t">
            <div class="mx-auto max-w-5xl">
                <h2 class="text-3xl font-bold tracking-tight text-center mb-12">Why Choose Ace Job Agency?</h2>
                <div class="grid gap-6 md:grid-cols-3">
                    <div class="card">
                        <header>
                            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary mb-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/></svg>
                            </div>
                            <h2>Secure & Private</h2>
                        </header>
                        <section>
                            <p class="text-sm text-muted-foreground">Your data is encrypted and protected with industry-leading security measures.</p>
                        </section>
                    </div>
                    <div class="card">
                        <header>
                            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary mb-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"/></svg>
                            </div>
                            <h2>Fast Matching</h2>
                        </header>
                        <section>
                            <p class="text-sm text-muted-foreground">Our AI-powered system matches you with the perfect opportunities quickly.</p>
                        </section>
                    </div>
                    <div class="card">
                        <header>
                            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary mb-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3.85 8.62a4 4 0 0 1 4.78-4.77 4 4 0 0 1 6.74 0 4 4 0 0 1 4.78 4.78 4 4 0 0 1 0 6.74 4 4 0 0 1-4.77 4.78 4 4 0 0 1-6.75 0 4 4 0 0 1-4.78-4.77 4 4 0 0 1 0-6.76Z"/><path d="m9 12 2 2 4-4"/></svg>
                            </div>
                            <h2>Verified Employers</h2>
                        </header>
                        <section>
                            <p class="text-sm text-muted-foreground">All our partner companies are verified to ensure legitimate opportunities.</p>
                        </section>
                    </div>
                </div>
            </div>
        </section>
    </div>
}

@section Scripts {
    <script>
        function toggleNRIC() {
            const masked = document.getElementById('nricMasked');
            const full = document.getElementById('nricFull');
            masked.classList.toggle('hidden');
            full.classList.toggle('hidden');
        }
    </script>
}
