@page
@model AppSec_Assignment2.Pages.EnableAuthenticatorModel
@{
    ViewData["Title"] = "Enable 2FA";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="card w-full">
        <header>
            <h1 class="text-2xl font-bold">Enable Two-Factor Authentication</h1>
            <p class="text-muted-foreground mt-2">Enhance your account security by enabling 2FA.</p>
        </header>
        
        <section class="space-y-8">
            <div class="bg-blue-50 text-blue-700 p-4 rounded-lg flex items-start gap-3 border border-blue-100">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 shrink-0"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
                <div class="text-sm">
                    <strong>Instructions:</strong> To use 2FA, you need an authenticator app like <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2" target="_blank" class="underline">Google Authenticator</a> or <a href="https://www.microsoft.com/en-us/security/mobile-authenticator-app" target="_blank" class="underline">Microsoft Authenticator</a> installed on your phone.
                </div>
            </div>

            <div class="flex flex-col items-center gap-6">
                <div class="text-center">
                    <span class="badge mb-2">Step 1</span>
                    <h3 class="font-medium">Scan QR Code</h3>
                </div>
                
                <div class="bg-white p-4 rounded-xl shadow-sm border">
                    <img src="@Model.QrCodeImage" alt="QR Code" class="w-48 h-48 sm:w-64 sm:h-64" />
                </div>
                
                <div class="text-center">
                   <p class="text-sm text-muted-foreground mb-2">Can't scan the code?</p>
                   <code class="bg-secondary px-3 py-1.5 rounded text-sm font-mono select-all">@Model.SharedKey</code>
                </div>
            </div>

            <div class="border-t pt-8">
                <div class="text-center mb-6">
                    <span class="badge mb-2">Step 2</span>
                    <h3 class="font-medium">Verify Code</h3>
                    <p class="text-sm text-muted-foreground mt-1">Enter the 6-digit code from your app</p>
                </div>
                
                <form method="post" class="max-w-sm mx-auto space-y-6">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                    <div class="form-group space-y-2">
                        <label asp-for="Code" class="sr-only">Verification Code</label>
                        <input asp-for="Code" class="form-input text-center text-3xl tracking-widest font-mono h-14 w-full" placeholder="000000" maxlength="6" autocomplete="off" inputmode="numeric" pattern="[0-9]*" />
                        <span asp-validation-for="Code" class="text-destructive text-sm text-center block"></span>
                    </div>

                    <div class="flex flex-col gap-3">
                        <button type="submit" class="btn w-full">Verify & Enable</button>
                        <a asp-page="/Index" class="btn-outline w-full text-center">Cancel</a>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
